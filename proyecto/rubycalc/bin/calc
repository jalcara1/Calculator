#!/usr/bin/env ruby

require 'rubygems'
require 'calculator'
require 'calcex'

$calc = Calculator.new()
while true do  
  $stdout.print "> "
  $stdout.flush
  text = gets
  
  begin
     if text == nil then
        break
     end
    puts "=> " + $calc.eval(text).to_s
  rescue ParseError
    puts "* Parse Error"
  rescue UnrecognizedTokenException
    #puts "UnrecognizedTokenException"
  rescue
    #puts "Unkown exception"
  end
end
